{
  "name": "@allthings/renovate-config",
  "version": "1.0.1",
  "description": "Allthings' Renovate config preset",
  "author": "Allthings",
  "license": "MIT",
  "homepage": "https://github.com/singapore/renovate-config",
  "repository": "https://github.com/allthings/node-standard",
  "bugs": {
    "url": "https://github.com/allthings/node-standard/issues"
  },
  "renovate-config": {
    "default": {
      "extends": ["config:base"],
      "automerge": false,
      "automergeType": "branch-push",
      "patch": {
        "automerge": true
      },
      "schedule": [
        "after 2am and before 3am",
        "after 9am and before 6pm every weekday"
      ],
      "prHourlyLimit": 10,
      "rebaseStalePrs": true,
      "updateNotScheduled": true,
      "packageRules": [
        {
          "packageNames": ["aws-sdk"],
          "schedule": ["after 2am and before 3am on sunday"]
        }
      ]
    }
  }
}
