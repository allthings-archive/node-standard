{
  "name": "@allthings/renovate-config",
  "version": "1.1.1",
  "description": "Allthings' Renovate config preset",
  "author": "Allthings",
  "license": "MIT",
  "homepage":
    "https://github.com/allthings/node-standard/tree/master/packages/renovate-config",
  "repository": "https://github.com/allthings/node-standard",
  "bugs": {
    "url": "https://github.com/allthings/node-standard/issues"
  },
  "renovate-config": {
    "default": {
      "extends": ["config:base"],
      "automerge": false,
      "automergeType": "branch-push",
      "minor": {
        "automerge": true
      },
      "packageRules": [
        {
          "packageNames": ["aws-sdk"],
          "schedule": ["after 2am and before 3am on sunday"]
        }
      ],
      "patch": {
        "automerge": true
      },
      "rebaseStalePrs": true,
      "schedule": [
        "after 8am and before 6pm every weekday"
      ],
      "separatePatchReleases": true,
      "timezone": "Europe/Berlin",
      "updateNotScheduled": false,
    }
  }
}
